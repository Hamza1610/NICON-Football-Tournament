{
  "compilerOptions": {
    "target": "ES2022",                  // Modern JS target
    "module": "commonjs",                // Node.js compatible module system
    "rootDir": "src",                     // Source code folder
    "outDir": "dist",                     // Compiled output folder
    "strict": true,                       // Enable all strict type-checking options
    "esModuleInterop": true,              // Allow default imports from CommonJS modules
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,                 // Skip type checking of declaration files
    "resolveJsonModule": true,            // Allow importing JSON files
    "noImplicitAny": true,                // Prevent variables with implicit any type
    "moduleResolution": "node",           // Module resolution strategy
    "sourceMap": true,                     // Generate source maps
    "incremental": true                   // Enable faster incremental builds
  },
  "include": ["src"],                     // Files to include in compilation
  "exclude": ["node_modules", "dist", "tests"] // Files/folders to exclude
}
